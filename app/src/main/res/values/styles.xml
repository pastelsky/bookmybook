<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/color1</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/color2</item>

        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/color1</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/color2</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/color3</item>

        <item name="android:colorControlHighlight">#55d0bed9</item>

        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/color3</item>
        <item name="colorControlHighlight">@color/color3</item>

        <item name="android:windowActionBarOverlay">true</item>


    </style>


    <style name="numberPadStyle">
        <item name="android:background">#00ffffff</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:layout_margin">12dp</item>

    </style>
</resources>
