<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/color1</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/color2</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/color3</item>

        <item name="android:colorControlHighlight">#55d0bed9</item>

        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>
